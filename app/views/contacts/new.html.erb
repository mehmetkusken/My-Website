<section class="header-contact">
<h1>Contact Us</h1>
</section>


<section class="contact-us">
<div class="row">

<div class="contact-col">
<div>
<div class="fa">
<%= image_tag "icons8-home-24(1).png" %>
</div>
<span>
<h5>Address</h5>
<p>Denver Downtown</p>
</span>
</div>
<div>
<div class="fa">
<%= image_tag "icons8-email-24.png" %>
</div>
<span>
<h5>Email</h5>
<p>mehmetkusken@hotmail.com</p>
</span>
</div>
</div>

<div class="contact-col">
<%= form_for @contact do |f|%>
    <%= f.label :name%>
    <%= f.text_field :name, required: true %>
    
    <br>

    <%= f.label :email%>
    <%= f.email_field :email, required: true %>
    <br>
    <div class="message">
    <%= f.label :message%>
    <%= f.text_area :message, :rows => "30x10" , as: :text %>
    </div>

    <div class="hidden">
    <%= f.label :nickname%>
    <%= f.text_field :nickname, hint: "leave this field blank" %>
    </div>


    <%= f.submit "Send Message", class: "button" %>

    <% end %>

</div>

</div>
</section>



